@model IEnumerable<YayinEviMvcDapper.Models.KitapModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Ekle", "EY")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KitapAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KategoriNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YazarNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YayınEviNo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.KitapAd)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.KategoriNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.YazarNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.YayınEviNo)
    </td>
    <td>
        @Html.ActionLink("Düzenle", "EY", new { id = item.KitapNo }) |
        @Html.ActionLink("Sil", "Delete", new { id = item.KitapNo })
    </td>
</tr>
}

</table>
