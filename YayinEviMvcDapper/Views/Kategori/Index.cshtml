@model IEnumerable<YayinEviMvcDapper.Models.KategoriModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Ekle", "EY")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAd)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAd)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "EY", new { id = item.KategoriNo }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.KategoriNo })
        </td>
    </tr>
}

</table>
